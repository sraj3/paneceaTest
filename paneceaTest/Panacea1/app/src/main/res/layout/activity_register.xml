<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.sugandh.panacea1.register"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"    >


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="500dp"
            android:id="@+id/relative"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true" >


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:orientation="horizontal"
                android:layout_height="40dp"
                android:id="@+id/rGroup">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:id="@+id/rb_user" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service Provider"
                    android:id="@+id/rb_usp"
                    android:layout_marginLeft="20dp"
                    />

            </RadioGroup>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:layout_marginTop="31dp"
                android:id="@+id/et_uname"
                android:layout_below="@+id/relative1"
                android:layout_alignParentStart="true"
                android:hint="name" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:layout_below="@+id/et_uname"
                android:layout_alignEnd="@+id/et_uname"
                android:layout_marginTop="22dp"
                android:id="@+id/et_uemail"
                android:hint="email" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:layout_below="@+id/et_uemail"
                android:layout_alignEnd="@+id/et_uemail"
                android:layout_marginTop="26dp"
                android:id="@+id/et_umobile"
                android:hint="mobile" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:layout_below="@+id/et_umobile"
                android:layout_alignParentStart="true"
                android:layout_marginTop="28dp"
                android:id="@+id/et_upassword"
                android:hint="password" />

            <Button
                android:text="Submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_upassword"
                android:layout_alignEnd="@+id/et_upassword"
                android:layout_marginEnd="27dp"
                android:layout_marginTop="28dp"
                android:id="@+id/submit"
                android:onClick="add_user"/>

            <TextView
                android:text="Please check your internet connection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:id="@+id/message"
                android:layout_below="@+id/submit"
                android:layout_alignEnd="@+id/submit" />

        </RelativeLayout>
    </ScrollView>